<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <header>
        <div class="container">
            <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">

            <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
                <li><a href="{{ path('app_home') }}" class="nav-link px-2 link-secondary">Home</a></li>
                <li><a href="#" class="nav-link px-2">Features</a></li>
                <li><a href="#" class="nav-link px-2">Pricing</a></li>
                <li><a href="#" class="nav-link px-2">FAQs</a></li>
                <li><a href="#" class="nav-link px-2">About</a></li>
            </ul>

            <div class="col-md-5 text-end d-flex justify-content-center align-items-center gap-2">
                <input type="search" id="search" class="form-control" placeholder="Search...">
                <button type="button" class="btn btn-outline-primary">Login</button>
                <button type="button" class="btn btn-primary" style="width:190px;">Sign-up</button>
            </div>
            </header>
        </div>
    </header>
    <body>
        <div class="container flash-messages">
            {% for label, messages in app.flashes(['success', 'warning']) %}
                    {% for message in messages %}
                        <div class="alert alert-{{label}}">{{message}}</div>
                    {% endfor %}
            {% endfor %}
        </div>
        <div class="search d-none">
            <div class="container">
                <div class="search-wrapper">

                    <ul class="item_list p-2">
                        {# <li class="item border p-3 mb-3">
                            <a class="text-decoration-none" href="1"><p>Test</p></a>
                        </li> #}

                    </ul>
                </div>
            </div>
        </div>
        {% block body %}{% endblock %}
        <script>

            const getData = async (url) => {
                const req = await fetch(url, {
                method: 'GET',
                headers: {
                    "Content-Type": "application/json",
                    charset: "utf-8",
                },
                });

                const res = await req.json();

                return res;
            };
            let searchWrapper = document.querySelector('.search');
            let searchInput = document.getElementById('search');
            let itemList = document.querySelector('.item_list');
            searchInput.addEventListener('input', async (e) => {
                console.log(e.target.value.length)
                if (e.target.value.length === 0) {
                    searchWrapper.classList.add('d-none');
                } else {
                    searchWrapper.classList.remove('d-none');
                }

                console.log(e.target.value);
                itemList.innerHTML = null;
                let res = await getData("/search?" + new URLSearchParams({query: e.target.value}));
                for (let item of res) {
                    let li = document.createElement('li');
                    let a = document.createElement('a');
                    let p = document.createElement('p');
                    li.classList.add('item', 'border', 'p-3', 'mb-3');
                    a.classList.add('text-decoration-none');
                    if (item['entity'] == 'item') {
                        a.href="/item/" + item['id'];
                    } else if (item['entity'] == 'collection') {
                        a.href="/collection/" + item['id'];
                    }
                    p.innerText = item['name'];
                    li.appendChild(a);
                    a.appendChild(p);
                    itemList.appendChild(li);

                }
            })

            document.addEventListener('click', event => {
                if (!searchWrapper.classList.contains('d-none')) {
                    searchWrapper.classList.add('d-none');
                }
            });



        </script>
    </body>
</html>

